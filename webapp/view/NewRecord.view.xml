            </f:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer />
                <Button text="{i18n>Save}" press="onSave" type="Accept" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
